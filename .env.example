# JobMail Configuration Example
# Copy this file to secrets.env and fill in your actual values

# AI Provider Selection (openai, anthropic, or ollama)
AI_PROVIDER=openai

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Anthropic Configuration (if using Anthropic)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Ollama Configuration (if using Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Gmail Configuration
# Path to your OAuth2 credentials file (download from Google Cloud Console)
GMAIL_CREDENTIALS_FILE=credentials.json
# Path where OAuth2 token will be stored after first auth
GMAIL_TOKEN_FILE=token.json

# Classification Configuration
CONFIDENCE_THRESHOLD=0.8
BATCH_SIZE=20

# Label Names (flat hierarchy)
LABEL_ACKNOWLEDGED=Acknowledged
LABEL_REJECTED=Rejected
LABEL_FOLLOWUP=FollowUp
LABEL_JOBBOARD=JobBoard

# Processing Configuration
DRY_RUN=false
LOG_LEVEL=INFO

# Database
DATABASE_PATH=jobmail.db
